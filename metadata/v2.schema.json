{
  "description": "License Zero Metadata",
  "type": "object",
  "required": [
    "schema",
    "offers"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "const": "https://schemas.licensezero.com/metadata/2.0.0.json"
    },
    "offers": {
      "type": "array",
      "items": {
        "description": "License Zero Metadata Record",
        "type": "object",
        "required": [
          "licensorSignature",
          "agentSignature",
          "metadata"
        ],
        "properties": {
          "licensorSignature": {
            "description": "Licensor's Ed25519 Signature",
            "type": "string",
            "pattern": "^[0-9a-f]{128}$"
          },
          "metadata": {
            "type": "object",
            "required": [
              "licensorID",
              "offerID",
              "terms",
              "version"
            ],
            "additionalProperties": false,
            "properties": {
              "licensorID": {
                "description": "Licensor ID",
                "comment": "included so clients can determine whether the person auditing licenses is the licensor",
                "type": "string",
                "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
              },
              "offerID": {
                "description": "Offer ID",
                "type": "string",
                "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
              },
              "terms": {
                "description": "Public License Terms",
                "enum": [
                  "parity",
                  "prosperity"
                ]
              },
              "version": {
                "description": "Public License Version",
                "type": "string",
                "pattern": "^[0-9]+.[0-9]+.[0-9]+$"
              }
            }
          }
        }
      }
    }
  }
}
