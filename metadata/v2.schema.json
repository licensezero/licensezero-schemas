{
  "description": "License Zero Metadata",
  "type": "object",
  "required": [
    "offers",
    "schema"
  ],
  "properties": {
    "offers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "licensorID",
          "offerID",
          "signature",
          "terms",
          "version"
        ],
        "additionalProperties": false,
        "properties": {
          "licensorID": {
            "description": "Licensor ID",
            "comment": "included so clients can determine whether the person auditing licenses is the licensor",
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
          },
          "offerID": {
            "description": "Offer ID",
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
          },
          "signature": {
            "description": "Agent's Ed25519 Signature",
            "type": "string",
            "pattern": "^[0-9a-f]{128}$"
          },
          "terms": {
            "description": "Public License Terms",
            "enum": [
              "parity",
              "prosperity"
            ]
          },
          "version": {
            "description": "Public License Version",
            "type": "string",
            "pattern": "^[0-9]+.[0-9]+.[0-9]+$"
          }
        }
      }
    },
    "schema": {
      "type": "string",
      "const": "https://schemas.licensezero.com/metadata/2.0.0.json"
    }
  }
}
