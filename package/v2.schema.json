{
  "description": "License Zero Package Metadata",
  "type": "object",
  "required": [
    "schema",
    "offers"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "const": "https://schemas.licensezero.com/package/2.0.0.json"
    },
    "offers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "licensorID",
          "offerID",
          "terms",
          "signature"
        ],
        "additionalProperties": false,
        "properties": {
          "licensorID": {
            "description": "Licensor ID",
            "comment": "enables clients to determine whether the person auditing licenses is the licensor",
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
          },
          "offerID": {
            "description": "Offer ID",
            "comment": "enables clients to order private licenses",
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
          },
          "terms": {
            "description": "Public License Terms",
            "oneOf": [
              {
                "type": "string",
                "pattern": "^https://paritylicense.com/versions/[0-9]+\\.[0-9]+\\.[0-9]+"
              },
              {
                "type": "string",
                "pattern": "^https://prosperitylicense.com/versions/[0-9]+\\.[0-9]+\\.[0-9]+"
              }
            ]
          },
          "signature": {
            "description": "Agent's Ed25519 Signature",
            "type": "string",
            "pattern": "^[0-9a-f]{128}$"
          }
        }
      }
    }
  }
}
